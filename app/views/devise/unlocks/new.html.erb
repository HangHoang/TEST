<h2>Resend unlock instructions</h2>

<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, :id=>'form_resend_unlock' }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email , :class=>'control-label'%><br />
  <%= f.email_field :email, :autofocus => true, :class=>'form-control' %></div>

  <div style='margin-top: 2%;'><%= f.submit "Resend unlock instructions" %></div>
<% end %>

<%= render "devise/shared/links" %>
