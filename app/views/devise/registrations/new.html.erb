<div class='page-header'>
	<h2>Sign up</h2>
</div>
<%= form_for(@user, :url=>users_path, :html => { :name=>"form_sign_up", :onSubmit=>"return formValidation()", :id=>'form_signUp'}) do |f| %>
<%= devise_error_messages! %>

<div>
  <%= f.label :email, :class => 'control-label' %>
  <div>
    <%= f.text_field :email, :autofocus => true, :class => ' form-control' %>
  </div>
</div>
<br>
<div>
  <%= f.label :password, :class => 'control-label' %>
  <div>
    <%=f.text_field :password, :class => ' form-control', :type=>"password"%>
  </div>
</div>
<br>
<div>
  <%= f.label :password_confirmation, :class => 'control-label' %>
  <div>
    <%=f.text_field :password_confirmation, :class => ' form-control', :type=>"password"%>
  </div>
</div><br>
<div style='margin-bottom: 2%'><%= f.submit "Create", :class => 'btn btn-primary col-lg-4 col-md-4 col-xs-5'%></div>
<% end %>
<div style='clear: both'>
	<%= render "devise/shared/links" %>
</div>