<div class='page-header'>
	<h2>Resend confirmation instructions</h2>
</div>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :id=>"form_resend_confirm" }) do |f| %>
  <%= devise_error_messages! %>

  <div>
	  <%= f.label :email, :class => 'control-label' %>
	  <div>
	    <%= f.email_field :email, :autofocus => true, :class => ' form-control' %>
	  </div>
	</div>

  <div style='margin-top: 2%;'><%= f.submit "Resend confirmation instructions", :class=>'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
