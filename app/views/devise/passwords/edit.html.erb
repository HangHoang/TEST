<div class='page-header'>
<h2>Change your password</h2>
</div>
<%= form_for(@user, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :id=>'form_change_password' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, "New password", :class=>'control-label' %><br />
  <%= f.password_field :password, :autofocus => true, :class=>' form-control' %></div>

  <div><%= f.label :password_confirmation, "Confirm new password", :class=>'control-label' %><br />
  <%= f.password_field :password_confirmation, :class=>' form-control' %></div>

  <div style='margin-top: 2%;'><%= f.submit "Change my password", :class=>'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
