<div class='page-header'>
<h2>Forgot your password?</h2>
</div>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :id=>'form_forgot_password' }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, :class => 'control-label' %><br />
  <%= f.email_field :email, :autofocus => true, :class => ' form-control' %></div>

  <div style='margin-top: 2%;'><%= f.submit "Send me reset password instructions", :class => 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
