<div class='page-header'><h2>Sign in</h2></div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{:id=>'form_sign_in'}) do |f| %>
  <div><%= f.label :email, :class=>'label-control' %><br />
  <%= f.email_field :email, :autofocus => true, :class=>' form-control' %></div>

  <div><%= f.label :password, :class=>'label-control' %><br />
  <%= f.password_field :password, :class=>' form-control' %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class=>'label-control' %></div>
  <% end -%>

  <div style='margin-top: 2%;'><%= f.submit "Sign in", :class=>'btn btn-mini' %></div>
<% end %>

<%= render "devise/shared/links" %>
