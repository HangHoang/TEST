<div class ="page-header">
<h1>Listing type of product</h1>
</div>


<div>
  <%= link_to 'New type product', new_product_type_path, :class => "btn btn-mini" %>
  <%= link_to 'Back', welcome_index_path, :class => 'btn btn-mini'%>
</div>


<table class="table table-striped">
  <thead>
    <tr>
      <th id='product_type_name'>Name type of product</th>
    </tr>
  </thead>

  <tbody>
  <% @product_types.each do |product_type| %>
    <tr>
      <td class="col-lg-6 col-md-6 col-xs-6"><%= product_type.product_type_name %></td>
      <td>
        <%= link_to 'Show', product_type_path(product_type),:class => 'btn btn-mini' %>
      </td>
      <td>
        <%= link_to "Edit", edit_product_type_path(product_type), :class => 'btn btn-mini' %>
      </td>
      <td >
        <input id= "<%= product_type.id %>" class="delete btn btn-mini btn-danger" type = "button"  value="Delete">
      </td>
    </tr>
  <% end %>
  </tbody>
</table>


<div class =" col-lg-4 col-lg-offset-5 col-md-4 col-md-offset-5 col-xs-*">
  <%=will_paginate @product_types%>
</div>

<div class="dialog" title ="Confirm Delete">
  <p>Are U sure?</p>
</div>
<script type="text/javascript">
$(document).ready(function(){
  $(".dialog").hide();
});
</script>